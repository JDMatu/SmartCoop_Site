<script>
    document.addEventListener('DOMContentLoaded', () => {
        const serviceButtons = document.querySelectorAll('.service-button');
        
        const showContent = (index) => {
            // Ocultar todo el contenido
            document.querySelectorAll('[id^="content-desktop-"]').forEach((el) => el.classList.add('hidden'));
            document.querySelectorAll('[id^="content-mobile-"]').forEach((el) => el.classList.add('hidden'));

            // Resaltar el botón seleccionado
            serviceButtons.forEach(button => button.classList.remove('active'));
            serviceButtons[index].classList.add('active');
            
            // Mostrar el contenido seleccionado en escritorio
            const desktopContent = document.getElementById(`content-desktop-${index}`);
            if (desktopContent) {
                desktopContent.classList.remove('hidden');
            }

            // Mostrar el contenido seleccionado en móvil
            const mobileContent = document.getElementById(`content-mobile-${index}`);
            if (mobileContent) {
                mobileContent.classList.remove('hidden');
            }
        };

        showContent(0);

        serviceButtons.forEach((button, index) => {
            button.addEventListener('mouseenter', () => showContent(index));
        });
    });
</script>


<style>

    .active {
        color: #0f46a0;
        padding-left: 20px;
        transition: ease-in-out 0.3s;
        font-weight: bold;
