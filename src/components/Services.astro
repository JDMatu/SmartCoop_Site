    .service-button.active::before {
        content: "";
        display: block;
        width: 35px; /* Ajusta el tamaño de la línea */
        height: 3px; /* Ajusta el grosor de la línea */
        background-color: #0f46a0; /* Color de la línea */
        margin-bottom: 1px; /* Espacio entre la línea y el texto */
    }

    @keyframes slideInFromTopRight {
    0% {
        opacity: 0;
    }
    100% {
        transform: translate(0, 0);
        opacity: 1;
    }
    }

    .animated-svg {
        animation: slideInFromTopRight 1.5s ease-in-out forwards;
    }

</style>





