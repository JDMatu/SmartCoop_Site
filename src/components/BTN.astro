---
const {text, id} = Astro.props
---


<div class="relative inline-flex items-center group">
    <div class="absolute left-[-5px] flex items-center justify-center w-12 h-12 bg-blue-500 rounded-full circle transform scale-100 transition-all duration-300 ease-in-out group-hover:scale-[10] group-hover:left-0 group-hover:w-full group-hover:h-full group-hover:bg-blue-500"></div>                
    <button id={id} class="relative py-2 px-6 rounded text-white overflow-hidden group transition-colors duration-300 ease-in-out">
    <span class="relative font-bold text-xl flex items-center">
        {text}
        <svg class="mx-2" xmlns="http://www.w3.org/2000/svg" width="1.2em" height="1.2em" viewBox="0 0 15 15">
        <path fill="currentColor" fill-rule="evenodd" d="M9.854 3.146L14.207 7.5l-4.353 4.354l-.708-.708L12.293 8H1V7h11.293L9.146 3.854z" clip-rule="evenodd" />
        </svg>
    </span>
    </button>
</div>


<style>
    @keyframes bounce {
        0%, 100% {
        transform: scale(1.2); /* Más pequeño por defecto */
        background-color: #3b82f6; /* Azul original */
      }
      50% {
        transform: scale(1.4); /* Más grande durante el rebote */
        background-color: #2563eb; /* Tonalidad más oscura */
      }
    }

    .circle {
      animation: bounce 1.5s ease-in-out infinite; /* Tiempo de animación de 2 segundos, suavizado y repetición infinita */
    }
</style>